.btn-cargar-mas
	background linear-gradient(to bottom, #1e5799 0%,#2989d8 50%,#207cca 51%,#7db9e8 100%)
	border-radius 10rem
	box-shadow 0px 0px 0px rgba(0, 0, 0, .75)
	color #fff !important
	display flex
	font-size 1.5em
	margin 1em auto
	opacity 0.3
	vertical-align middle
	
	&:hover
		background-color darken(Azul, 40%) !important
		
	&:focus
		outline 0

.btn-primary
	background-color Azul
	

	&:hover
		background-color darken(Azul, 40%)
		